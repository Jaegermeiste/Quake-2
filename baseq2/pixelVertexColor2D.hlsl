struct PixelInputType
{
    float4 position : SV_POSITION;
    float4 color : COLOR;
    float2 tex : TEXCOORD0;
};

cbuffer constants : register(b0)
{
	float brightness;
	float contrast;
	float unused1;
	float unused2;
};


////////////////////////////////////////////////////////////////////////////////
// Pixel Shader
////////////////////////////////////////////////////////////////////////////////
float4 PS_Entry(PixelInputType input) : SV_TARGET
{
    return input.color;
}